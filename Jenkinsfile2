pipeline {
    agent any
    
    tools {
        // Must match the name in Manage Jenkins -> Tools
        nodejs "node"
    }

    stages {
        stage('Git Checkout & Show Tree') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/KARTIKNAIK18/Demo-CICD.git'

                // List files on macOS
                sh 'ls -R'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Starting the application...'
                /*
                  1. nohup runs the process in the background.
                  2. output.log stores the console logs (and the link).
                  3. sleep 5 gives the app time to start.
                  4. cat output.log prints the link back to Jenkins console.
                */
                sh '''
                    nohup npm start > output.log 2>&1 &
                    sleep 5
                    echo "--- Application Logs (Look here for the link) ---"
                    cat output.log
                    echo "------------------------------------------------"
                '''
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline finished! The app is running in the background.'
        }
    }
}