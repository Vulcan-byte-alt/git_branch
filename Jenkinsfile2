pipeline {
    agent any
    
    tools {
        nodejs "node"
    }

    stages {
        stage('Git Checkout & Show Tree') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/KARTIKNAIK18/Demo-CICD.git'

                // 'ls -R' is the macOS/Linux equivalent of the Windows 'dir' command
                sh 'ls -R'
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                // Note: 'npm start' usually keeps running. 
                // In a real CI/CD pipeline, you might use a process manager like PM2.
                sh 'npm start'
            }
        }
    }
}